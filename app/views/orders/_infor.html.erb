<%= form_for(@order) do |f| %>
  <div class="row">
    <div class="col-50">
      <%= f.label :title, t('order.information'), class: 'title-order' %>
      <hr>
      <%= f.label :name, t('order.infor_ship.name') %>
      <%= f.text_field :name, class: 'form-control', value: current_user.name %>
      <%= f.label :email, t('order.infor_ship.email'), class: 'info-add' %>
      <%= f.email_field :email, class: 'form-control', value: current_user.email, disabled: true %>
      <%= f.label :address, t('order.infor_ship.address'), class: 'info-add' %>
      <%= f.text_field :address, class: 'form-control', value: current_user.address %>
      <%= f.label :phone_number, t('order.infor_ship.phone_number'), class: 'info-add' %>
      <%= f.telephone_field :phone_number, class: 'form-control', value: current_user.phone_number %>
      <br>
      <div class="time-delivey">
        <%= f.label :delivery_time, t('order.infor_ship.delivery_time'), class: 'delivery' %>
        <%= f.date_field(:delivery_time, { min: Date.today, value: Date.today }) %>
      </div>
      <br>
      <%= f.submit t('order.checkout'), class: 'btn btn-success btn-lg glyphicon glyphicon-ok' %>
    </div>
  </div>
<% end %>
