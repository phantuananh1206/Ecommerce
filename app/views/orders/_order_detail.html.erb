<section class="section about-section gray-bg" id="about">
  <div class="container">
    <div class="row align-items-center flex-row-reverse">
      <div class="col-lg-6">
        <div class="about-text go-to">
          <h3 class="dark-color"> <%= order_detail.product_name %></h3>
          <div class="row about-list">
            <div class="col-md-6">
              <div class="media">
                <label><%= t('order.quantity') %></label>
                <p><%= order_detail.quantity %></p>
              </div>
              <div class="media">
                <label><%= t('order.price') %></label>
                <p><%= number_to_currency(order_detail.price) %></p>
              </div>
            </div>
          </div>
        </div>
      </div>
      <div class="col-lg-6">
        <div class="about-avatar">
          <%= load_image_product(order_detail.product) %>
        </div>
      </div>
    </div>
  </div>
</section>
