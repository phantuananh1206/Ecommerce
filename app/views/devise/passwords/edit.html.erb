<% provide(:title, t('title.change_password')) %>
<div class="container form-devise">
  <div class="row">
    <div class="panel-body">
      <h2 class="text-center"><%= t 'user.change_your_password' %></h2>
      <%= form_for(resource, as: resource_name, url: password_path(resource_name),
                                                html: { method: :put }) do |f| %>
        <%= render 'devise/shared/error_messages', resource: resource %>
        <%= f.hidden_field :reset_password_token %>
        <%= f.label :password, t('user.new_password') %>
        <% if @minimum_password_length %>
          <em><%= @minimum_password_length %><%= t('user.characters_minimum') %></em>
        <% end %>
        <%= f.password_field :password, autofocus: true, autocomplete: 'new-password',
                                        class: 'form-control' %>
        <%= f.label :password_confirmation, t('user.confirm_new_password') %>
        <%= f.password_field :password_confirmation, autocomplete: 'new-password', class: 'form-control' %>
        <%= f.submit t('user.change_my_password'), class: 'btn btn-sm btn-primary btn-block' %>
      <% end %>
      <%= render 'devise/shared/links' %>
    </div>
  </div>
</div>
