<tr class="active">
  <td><%= order.id %></td>
  <td><%= order.user.name %></td>
  <td><%= order.name %></td>
  <td><%= order.address %></td>
  <td><%= order.phone_number %></td>
  <td><%= order.delivery_time %></td>
  <td><%= order.status %></td>
  <td><%= order.total_price %></td>
  <td>
    <%= number_to_currency(order.voucher&.discount.to_i) %>
  </td>
  <td><%= number_to_currency(order.total) %></td>
  <td>
    <%= link_to t('admin.order.view_detail'), order_path(id: order.id), class: 'btn btn-info btn-md' %>
  </td>
  <td>
    <%= load_link_to_status_order(order) %>
    <%= load_link_to_refuse_order(order) %>
  </td>
</tr>
