<div class="col-md-3 col-sm-6 list-products">
  <div class="product-grid">
    <div class="product-image">
      <%= link_to load_image_product(product), product %>
    </div>
    <div class="product-content">
      <h3 class="title"><%= product.name %></h3>
      <div class="price"><%= product.price %> $</div>
    </div>
    <ul class="social">
      <li>
        <%= form_tag(carts_path, method: :post, remote: true) do %>
          <%= hidden_field_tag(:product_id, product.id) %>
          <%= hidden_field_tag(:price, product.price) %>
          <%= hidden_field_tag(:quantity, Settings.product.min_quantity) %>
          <%= button_tag(type: 'submit', class: 'add-to-cart') do %>
            <i class='fa fa-shopping-cart'> <%= t('product.add_to_cart') %></i>
          <% end %>
        <% end %>
      </li>
    </ul>
  </div>
</div>
