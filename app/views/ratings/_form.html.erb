<div class="rating-box mt-3">
 <%= form_for @rating, url: product_ratings_path(product.id) do |f| %>
  <div class='main-rating'>
    <div class='ratings mb-3'>
      <span class='fa fa-star-o' id='star'></span>
      <span class='fa fa-star-o' id='star'></span>
      <span class='fa fa-star-o' id='star'></span>
      <span class='fa fa-star-o' id='star'></span>
      <span class='fa fa-star-o' id='star'></span>
    </div>
    <div class='ml-3 rating-value-display'>
      <span id='rating-value-display'><%= t('rating.min') %></span>
      <%= t('rating.max') %>
    </div>
  </div>
  <%= f.hidden_field :product_id, value: product.id %>
    <%= f.hidden_field :point, id: 'rating-value' %>
    <%= f.text_field :content, class: 'textarea' %>
    <%= f.submit t('order.submit'), class: 'btn btn-success btn-md' %>
    <%= link_to t('rating.index'), product_ratings_path(product.id), class: 'btn btn-info btn-md' %>
  <% end %>
</div>
<%= javascript_pack_tag 'rating' %>
